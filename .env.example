# PyCrunch Trace Configuration

# S3 Storage Support
# Set to 'true' to enable S3 storage (requires boto3)
PYCRUNCH_S3_ENABLED=false
PYCRUNCH_S3_BUCKET=my-trace-bucket
PYCRUNCH_S3_PREFIX=traces/

# Trace Filtering
# Automatically exclude builtin and frozen modules (e.g., str.replace)
PYCRUNCH_EXCLUDE_BUILTINS=true

# Session Retention
# If true, appends a unique ID to each trace to preserve all executions instead of overwriting.
PYCRUNCH_KEEP_SESSIONS=true

# Organization
# If true, stores traces in subfolders by date (e.g., 2026_01_29_22_47_04/my_function_UUID)
PYCRUNCH_ORGANIZE_BY_DATE=false
